  $element['advanced']['rel'] = [
    '#title' => t('Relationship'),
    '#type' => 'textfield',
    '#default_value' => $settings['advanced']['rel'],
    '#description' => t('Here you can enter a token which will be used as link <em>rel</em> attribute.'),
